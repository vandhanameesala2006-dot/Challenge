    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const sidebar = document.getElementById('sidebar');
            const sidebarCloseButton = document.getElementById('sidebar-close-button');

            mobileMenuButton.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                sidebar.classList.toggle('-translate-x-full');
            });

            sidebarCloseButton.addEventListener('click', () => {
                sidebar.classList.remove('active');
                sidebar.classList.add('-translate-x-full');
            });

            // Simulate fetching data with a slight delay
            setTimeout(() => {
                const dashboardData = {
                    totalSales: 1545678,
                    totalOrders: 2854,
                    totalProducts: 15487,
                    activeUsers: 954,
                    recentOrders: [
                        { id: 'ORD4589', customer: 'Riya Sharma', status: 'Shipped', amount: 899 },
                        { id: 'ORD4588', customer: 'Arjun Gupta', status: 'Processing', amount: 2549 },
                        { id: 'ORD4587', customer: 'Pooja Singh', status: 'Delivered', amount: 599 },
                        { id: 'ORD4586', customer: 'Vikram Joshi', status: 'Shipped', amount: 12999 },
                        { id: 'ORD4585', customer: 'Anjali Desai', status: 'Delivered', amount: 785 },
                    ],
                    topProducts: [
                        { name: 'Samsung Galaxy F14', category: 'Electronics', sales: 1250 },
                        { name: 'Puma T-Shirt', category: 'Fashion', sales: 980 },
                        { name: 'Noise Smartwatch', category: 'Electronics', sales: 750 },
                        { name: 'Ariel Washing Powder', category: 'Home & Kitchen', sales: 620 },
                        { name: 'Logitech Mouse', category: 'Computers', sales: 510 },
                    ]
                };

                // Helper function to format currency
                const formatter = new Intl.NumberFormat('en-IN', {
                    style: 'currency',
                    currency: 'INR',
                    minimumFractionDigits: 0
                });

                // Update cards
                document.getElementById('totalSales').textContent = formatter.format(dashboardData.totalSales);
                document.getElementById('totalOrders').textContent = dashboardData.totalOrders.toLocaleString();
                document.getElementById('totalProducts').textContent = dashboardData.totalProducts.toLocaleString();
                document.getElementById('activeUsers').textContent = dashboardData.activeUsers.toLocaleString();

                // Populate recent orders table
                const ordersTableBody = document.getElementById('recentOrdersTableBody');
                ordersTableBody.innerHTML = '';
                dashboardData.recentOrders.forEach(order => {
                    const row = document.createElement('tr');
                    const statusColor = order.status === 'Delivered' ? 'text-green-600 bg-green-100' :
                                         order.status === 'Shipped' ? 'text-blue-600 bg-blue-100' :
                                         'text-yellow-600 bg-yellow-100';
                    row.innerHTML = `
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${order.id}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${order.customer}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${statusColor}">${order.status}</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${formatter.format(order.amount)}</td>
                    `;
                    ordersTableBody.appendChild(row);
                });

                // Populate top products table
                const productsTableBody = document.getElementById('topProductsTableBody');
                productsTableBody.innerHTML = '';
                dashboardData.topProducts.forEach(product => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${product.name}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${product.category}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${product.sales.toLocaleString()}</td>
                    `;
                    productsTableBody.appendChild(row);
                });
            }, 1000); // Simulate network delay
        });
    </script>
